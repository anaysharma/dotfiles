// Documentation at https://www.sublimetext.com/docs/themes.html
{
    "variables":
    {
        "sidebarBorder": "#444c5600",
        "tabBorder": "#444c5600",
        "gridBorder": "#444c5600",
        "overlayBorder": "#2d333bff",
        "panelControlBorder": "#444c5600",
        "inputBorder": "#444c5600",
        "buttonBorder": "#444c5600",
        "statusBarBorder": "#444c5600",
        "vcsAnnotationBorder": "#444c5600",
        "accent": "#539bf5",
        "background": "var(--background)",
        "foreground": "#adbac7",
        "fontSizeSm": 11,
        "fontSizeMd": 11,
        "fontSizeLg": 12,
        "fontSizeHuge": 20,
        "fontFace": "system",
        "titleBarBackground": "#22272e",
        "titleBarForeground": "#768390",
        "tooltipBackground": "#6cb6ff",
        "tooltipForeground": "#1b4b91",
        "sidebarBackground": "#1c2128",
        "sidebarHeadingForeground": "#adbac7",
        "sidebarLabelForeground": "#adbac7",
        "sidebarLabelHoverForeground": "#adbac7",
        "sidebarLabelSelectedForeground": "#adbac7",
        "sidebarFolderForeground": "#768390",
        "sidebarFolderExpandedForeground": "var(accent)",
        "treeActiveSelectionBackground": "#373e47",
        "tabInactiveBackground": "#1c2128",
        "tabActiveForeground": "#adbac7",
        "tabActiveBackground": "#22272e",
        "tabSelectedBorderBorder": "#EC775C",
        "tabButtonForeground": "#adbac7",
        "panelControlBackground": "#1c2128",
        "panelControlForeground": "#adbac7",
        "panelRowBackground": "#1c2128",
        "panelRowForeground": "#adbac7",
        "panelRowLabelForeground": "#adbac7",
        "panelRowSelectedBackground": "rgba(99,110,123,0.4)",
        "panelRowSelectedForeground": "#adbac7",
        "panelRowMatchForeground": "#4184e4",
        "panelRowSelectedMatchForeground": "#4184e4",
        "panelRowLinkForeground": "#539bf5",
        "autoCompleteBackground": "#1c2128",
        "autoCompleteForeground": "#adbac7",
        "autoCompleteSelectedBackground": "#3392FF44",
        "autoCompleteSelectedForeground": "#adbac7",
        "autoCompleteMatchForeground": "var(accent)",
        "autoCompleteSelectedMatchForeground": "var(accent)",
        "inputBackground": "#1c2128",
        "inputForeground": "#adbac7",
        "buttonForeground": "#adbac7",
        "buttonBackground": "color(#adbac7 alpha(0.02))",
        "buttonHoverBackground": "color(#adbac7 alpha(0.1))",
        "buttonPressedBackground": "color(#adbac7 alpha(0.2))",
        "buttonSelectedBackground": "color(#adbac7 alpha(0.08))",
        "buttonIconForeground": "var(foreground)",
        "buttonIconSelectedForeground": "var(accent)",
        "statusBarForeground": "#768390",
        "statusBarHoverForeground": "#adbac7",
        "statusBarBackground": "#1c2128",
        "progressBarBackground": "#316dca",
        "scrollBar": "#484F5833",
        "scrollTrack": "#484F5888",
        "vcsUntracked": "#57ab5a",
        "vcsModified": "#316dca",
        "vcsDeleted": "#e5534b",
        "vcsIgnored": "#636e7b",
        "vcsUnmerged": "#cc6b2c",
        "vcsStaged": "var(--cyanish)",
        "vcsMissing": "#cc6b2c"
    },
    "rules":
    [
        {
            "class": "tabset_control",
            "layer0.tint": "var(tabInactiveBackground)",
            "layer0.opacity": 1,
            "layer1.draw_center": false,
            "layer1.inner_margin": [
                0,
                1,
                1,
                1
            ],
            "layer1.tint": "var(tabBorder)",
            "layer1.opacity": 1,
            "content_margin": [
                0,
                -1,
                8,
                0
            ],
            "connector_height": 0,
            "tint_index": 0,
            "tab_overlap": 0,
            "tab_width": 160,
            "tab_height": 31,
            "mouse_wheel_switch": false,
            "tint_modifier": "var(tabInactiveBackground)"
        },
        {
            "class": "status_bar",
            "layer0.opacity": 1,
            "layer0.tint": "var(statusBarBackground)",
            "layer1.inner_margin": [
                0,
                1,
                0,
                0
            ],
            "layer1.opacity": 1,
            "layer1.tint": "var(statusBarBorder)",
            "content_margin": [
                3,
                2,
                3,
                2
            ]
        },
        {
            "class": "quick_panel",
            "row_padding": [
                10,
                4
            ],
            "layer0.tint": [
                "background",
                1
            ],
            "layer0.opacity": 1
        },
        {
            "class": "panel_control",
            "layer0.tint": "var(panelControlBackground)",
            "layer0.opacity": 1,
            "layer1.draw_center": false,
            "layer1.inner_margin": [
                0,
                1,
                0,
                1
            ],
            "layer1.tint": "var(panelControlBorder)",
            "layer1.opacity": 1,
            "content_margin": [
                0,
                0
            ]
        },
        {
            "class": "text_line_control",
            "layer0.opacity": 1,
            "layer0.inner_margin": [
                2,
                0
            ],
            "layer0.tint": "var(background)",
            "layer1.tint": "var(inputBorder)",
            "layer1.opacity": 1,
            "layer1.inner_margin": 1,
            "layer1.draw_center": false,
            "content_margin": [
                4,
                4
            ],
            "color_scheme_tint": "var(background)"
        },
        {
            "class": "panel_grid_control",
            "inside_spacing": 0,
            "outside_hspacing": 0,
            "outside_vspacing": 0
        },
        {
            "class": "button_control",
            "content_margin": [
                0,
                0
            ],
            "min_size": [
                80,
                30
            ],
            "layer0.tint": "var(buttonBackground)",
            "layer0.opacity": 1,
            "layer0.inner_margin": [
                0,
                0
            ],
            "layer1.draw_center": false,
            "layer1.inner_margin": 1,
            "layer1.tint": "var(buttonBorder)",
            "layer1.opacity": 1
        },
        {
            "class": "icon_button_control",
            "layer0.tint": "var(buttonBackground)",
            "layer0.inner_margin": [
                10,
                60
            ],
            "layer0.opacity": 1,
            "layer1.draw_center": false,
            "layer1.inner_margin": [
                0,
                1,
                0,
                1
            ],
            "layer1.tint": "var(buttonBorder)",
            "layer1.opacity": 1,
            "content_margin": [
                12,
                8
            ]
        },
        {
            "class": "show_tabs_dropdown_button",
            "layer0.texture": "GitHub Theme/textures/navigation/more.png",
            "layer0.tint": "var(tabButtonForeground)",
            "layer0.opacity": {
                "target": 0.5,
                "speed": 5,
                "interpolation": "smoothstep"
            },
            "content_margin": [
                0,
                0
            ]
        },
        {
            "class": "scroll_tabs_left_button",
            "layer0.texture": "GitHub Theme/textures/navigation/arrow-small-left.png",
            "layer0.opacity": {
                "target": 0.5,
                "speed": 4,
                "interpolation": "smoothstep"
            },
            "layer0.tint": "var(tabButtonForeground)",
            "content_margin": [
                0,
                10
            ]
        },
        {
            "class": "scroll_tabs_right_button",
            "layer0.texture": "GitHub Theme/textures/navigation/arrow-small-right.png",
            "layer0.opacity": {
                "target": 0.5,
                "speed": 4,
                "interpolation": "smoothstep"
            },
            "layer0.tint": "var(tabButtonForeground)",
            "content_margin": [
                0,
                10
            ]
        },
        {
            "class": "sidebar_tree",
            "row_padding": [
                20,
                6
            ],
            "indent": 15,
            "indent_offset": 0,
            "indent_top_level": false,
            "dark_content": true,
            "spacer_rows": false
        },
        {
            "class": "tab_control",
            "attributes": [
                "selected"
            ],
            "layer1.tint": "var(tabActiveBackground)",
            "layer2.inner_margin": [
                0,
                1,
                1,
                0
            ],
            "layer3.inner_margin": [
                0,
                2,
                0,
                0
            ],
            "layer3.tint": "var(tabSelectedBorderBorder)",
            "tint_modifier": "var(tabActiveBackground)"
        },
        {
            "class": "icon_folder",
            "parents": [
                {
                    "class": "tree_row",
                    "attributes": [
                        "expanded"
                    ]
                }
            ],
            "layer0.texture": "GitHub Theme/textures/tree/folder-opened.png",
            "layer0.tint": "var(sidebarFolderExpandedForeground)",
            "content_margin": [
                8,
                8
            ]
        },
        {
            "class": "icon_folder_dup",
            "layer0.texture": "GitHub Theme/textures/tree/folder-dup.png",
            "layer0.tint": "var(sidebarFolderForeground)",
            "content_margin": [
                8,
                8
            ]
        },
    ]
}

